<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="cn.sccl.ilife.android.health_general_card.ui.HospitalAppointmentActivity">


    <com.ysyao.categorypopuplistview.MyCategoryBar
        android:layout_alignParentTop="true"
        android:id="@+id/category_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerPictureRight="@drawable/ic_menu_arrow_down"
        app:headerTextColor="@color/category_bar_header_text_color"
        app:headerTextSize="@dimen/popupwindow_header_text_size"/>

    <FrameLayout
        android:id="@+id/popup_window_area"
        android:layout_below="@+id/category_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>
